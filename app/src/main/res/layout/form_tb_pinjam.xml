<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edt_id_buku"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_judul_buku"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="Judul Buku"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_nama_peminjam"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="Nama Peminjam"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_tgl_pinjam"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="Tgl Pinjam"
        android:inputType="date"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_tgl_kembali"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="Tgl Kembali"
        android:inputType="date"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_no_telepone"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:hint="No Telepone"
        android:inputType="number"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>
    <EditText
        android:id="@+id/edt_alamat"
        android:layout_marginBottom="10dp"
        android:hint="Alamat"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background_normal"/>

</LinearLayout>